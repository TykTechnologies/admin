{{ $section :=  url_for .Resource}}
{{$actions := load_actions "edit"}}
{{if $actions}}
  {{if ne $section "/admin/provisioning_requests"}}
    <div class="qor-page__header">{{$actions}}</div>
  {{ end }}
{{end}}

<div class="qor-page__body qor-page__edit">

  {{render "shared/flashes"}}
  {{render "shared/errors"}}

  <div class="qor-form-container">
    <form class="qor-form" action="{{url_for .Result .Resource}}" method="POST" enctype="multipart/form-data">
      <input name="_method" value="PUT" type="hidden">
      {{if has_update_permission .Resource}}
        <div class="qor-form__actions">
          {{if ne $section "/admin/provisioning_requests"}}
            <a class="tyk-button tyk-button--primary-outline tyk-button--md qor-button--cancel" onclick="onCancel();" href="javascript:void(0)">{{t "qor_admin.form.cancel_edit" "Cancel"}}</a>
            <button class="tyk-button  tyk-button--success tyk-button--md qor-button--save" type="submit">{{t "qor_admin.form.save_changes" "Save Changes"}}</button>
          {{end}}
          {{if eq $section "/admin/provisioning_requests"}}
            <div class="qor-page__header combined-actions">
              <a class="tyk-button tyk-button--primary-outline tyk-button--md qor-button--cancel on-provisioning-requests" onclick="onCancel();" href="javascript:void(0)">{{t "qor_admin.form.cancel_edit" "Cancel"}}</a>
            {{$actions}}</div>
          {{ end }}
        </div>
      {{end}}
      {{render_form .Result edit_sections}}
    </form>
  </div>
</div>
